<?xml version='1.0' encoding='utf-8'?>
<s:WindowedApplication height='326' minHeight='326' minWidth='322'
    resize='onResize(event)' showStatusBar='false' width='322'
    windowResize='onWindowResize(event)'
    xmlns:dpk='dpk.*' xmlns:fx='http://ns.adobe.com/mxml/2009'
    xmlns:mx='library://ns.adobe.com/flex/mx'
    xmlns:s='library://ns.adobe.com/flex/spark'>
  <fx:Script source='QCRGScoreboard.mxml.as'/>
  <fx:Style source='QCRGScoreboard.css'/>
  <s:layout><s:VerticalLayout horizontalAlign='center'/></s:layout>
  <s:menu>
    <dpk:NativeMenu>
      <dpk:MenuItem name='application'>
        <dpk:MenuItem name='about'/>
        <dpk:Separator/>
        <dpk:MenuItem name='hide'/>
        <dpk:MenuItem name='hide_others'/>
        <dpk:MenuItem name='show_all'/>
        <dpk:Separator/>
        <dpk:MenuItem keyEquivalent='q' label='Quit' osMatch='^Mac OS'
            select='onQuitSelect(event)'/>
      </dpk:MenuItem>
      <dpk:MenuItem label='File' name='file'>
        <dpk:MenuItem keyEquivalent='w' label='Close'
            select='onCloseSelect(event)'/>
        <dpk:MenuItem keyEquivalent='q' label='Quit' osMatch='^(?!Mac OS)'
            select='onQuitSelect(event)'/>
      </dpk:MenuItem>
      <dpk:MenuItem label='Edit' name='edit'>
        <dpk:MenuItem keyEquivalent='x' label='Cut' name='cut'/>
        <dpk:MenuItem keyEquivalent='c' label='Copy' name='copy'/>
        <dpk:MenuItem keyEquivalent='v' label='Paste' name='paste'/>
        <dpk:MenuItem label='Delete' name='delete'/>
        <dpk:MenuItem keyEquivalent='a' label='Select All' name='select_all'/>
        <dpk:Separator/>
        <dpk:MenuItem name='special_characters'/>
      </dpk:MenuItem>
      <dpk:MenuItem name='window'>
        <dpk:MenuItem name='minimize'/>
        <dpk:MenuItem name='zoom'/>
        <dpk:Separator/>
        <dpk:MenuItem name='bring_all_to_front'/>
      </dpk:MenuItem>
    </dpk:NativeMenu>
  </s:menu>
  <s:Group height='100%' width='100%'>
    <s:layout>
      <dpk:AspectRatioLayout adjustHeight='2' adjustWidth='2'/>
    </s:layout>
    <s:BorderContainer height='100%' width='100%'/>
  </s:Group>
  <s:Group maxWidth='320' width='100%'>
    <s:layout><s:HorizontalLayout verticalAlign='middle'/></s:layout>
    <s:Label text='Clock:' width='52'/>
    <s:TextInput text='30:00' width='50%'/>
    <s:Label text='Jam:' width='52'/>
    <s:TextInput text='2:00' width='50%'/>
  </s:Group>
  <s:Group maxWidth='320' width='100%'>
    <s:layout><s:HorizontalLayout verticalAlign='middle'/></s:layout>
    <s:Label text='Period #:' width='52'/>
    <s:TextInput text='1' width='50%'/>
    <s:Label text='Lineup:' width='52'/>
    <s:TextInput text='0:00' width='50%'/>
  </s:Group>
  <s:Group maxWidth='320' width='100%'>
    <s:layout><s:HorizontalLayout verticalAlign='middle'/></s:layout>
    <s:Label text='Jam #:' width='52'/>
    <s:TextInput text='1' width='50%'/>
    <s:Label text='Timeout:' width='52'/>
    <s:TextInput text='0:00' width='50%'/>
  </s:Group>
</s:WindowedApplication>
